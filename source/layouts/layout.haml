!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    / Use the title from a page's frontmatter if it has one
    %title= current_page.data.title || "Pulpo WMS"
    = stylesheet_link_tag "site"
    = javascript_include_tag "site"
    <link rel="shortcut icon" type="image/x-icon" href="../images/pulpo/AF_pulpo_logo.ico">
  %body
    %header.bHeaderWrapper
      .bHeader
        .bHeader-logo
          = image_tag('images/pulpo/Pulpo_200x259.png', height: '60', width: '50')
        .bHeader-navigation
          #hamburger.bHeader-hamburger= svg_tag('hamburger')
          %ul#menu.aNavigation
            %li.aNavigation-item
              = link_to I18n.t('navigation.home'), '/'
            %li.aNavigation-item
              = link_to I18n.t('navigation.productDetail'), 'productDetail'
            /*%li.aNavigation-item*/
            /*  = link_to I18n.t('navigation.faq'), '#'*/
            %li.aNavigation-item
              = link_to I18n.t('navigation.contact'), 'contact'
    = yield
    .bFooterWrapper
      .bFooter
        .bFooter-infos
          .bFooter-logo= image_tag('images/pulpo/AF_pulpo_wms_logo_white.png', height: '80', width: '80')
